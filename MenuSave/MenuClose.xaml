<Window x:Class="MenuSave.MenuClose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuSave"
        mc:Ignorable="d"
        Title="Closer" Height="250" Width="500">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="17 pt" TextWrapping="Wrap" Margin="66,56,66,56" >Do you want to save your file?</TextBlock>
        <Button Grid.Row="1" Content="Yes" Height="35" Width="75" Click="ButtonYes_Click" Margin="78,19,339,19" />
        <Button Grid.Row="1" Content="No" Height="35" Width="75" Click="ButtonNo_Click" Margin="310,19,107,19" />
    </Grid>
</Window>
